<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mood">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/speechbubble"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/speechbubble"
        android:supportsRtl="true"
        android:windowSoftInputMode="stateAlwaysHidden"
        android:isScrollContainer="false"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".BroadCastService"></receiver>

        <activity
            android:name=".profile.profileActivity"
            android:parentActivityName=".Converse.ConverseActivity" />
        <activity
            android:name=".Converse.ConverseActivity"
            android:parentActivityName=".MainUi" />
        <activity
            android:name=".inboxActivity"
            android:parentActivityName=".MainUi" />
        <activity android:name=".chatActivity" />
        <activity android:name=".MainUi"  />
        <activity android:name=".walkThrough.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".MessageReceived"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>