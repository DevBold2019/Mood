<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:src="@drawable/sms"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/SendersPic"
        android:padding="3dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_margin="5dp"
        android:id="@+id/SendersMessage"
        android:maxWidth="240dp"
        android:maxLines="12"
        app:layout_constraintLeft_toRightOf="@+id/SendersPic"
        android:textSize="16sp"
        android:background="@drawable/sender_bg"
        android:textColor="#fff"
        android:text="Hi there"
       app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:maxLines="2"
        android:maxWidth="100dp"
        android:textColor="#000"
        android:textSize="10sp"
        android:id="@+id/SendersTime"
       android:layout_marginTop="1dp"
        android:text="11:00"
        app:layout_constraintLeft_toRightOf="@+id/SendersMessage"
        app:layout_constraintTop_toBottomOf="@+id/SendersMessage"/>





</androidx.constraintlayout.widget.ConstraintLayout>