<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/myrelative"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardy">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_marginTop="10dp"
             android:id="@+id/picha"
             android:textColor="#fff"
             android:textStyle="bold"
             android:text="JJ"
             android:textSize="16sp"
             android:gravity="center"
             android:textAlignment="center"
             android:background="@drawable/text_bg"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginLeft="10dp"
             android:layout_marginStart="10dp"
             app:layout_constraintTop_toTopOf="parent"/>


         <TextView
             android:id="@+id/jina"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintStart_toEndOf="@+id/picha"
             app:layout_constraintRight_toRightOf="@+id/picha"
             app:layout_constraintTop_toTopOf="parent"
             android:textColor="#111"
             android:padding="6dp"
             android:textStyle="bold"
             android:textSize="14sp"
             android:textColorHint="#000"
             android:gravity="start|center"
             android:layout_marginLeft="20dp"
             android:layout_marginStart="20dp"
             android:layout_marginTop="15dp"
             android:hint="Name" />


         <TextView
             android:id="@+id/date"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintRight_toRightOf="@+id/jina"
             app:layout_constraintTop_toTopOf="parent"
             android:gravity="start|center"
             android:textColor="#111"
             android:layout_margin="15dp"
             android:inputType="datetime"
             android:hint="10:00pm" />


         <TextView
             android:id="@+id/mesoo"
             android:layout_width="wrap_content"
             android:layout_height="0dp"
             app:layout_constraintTop_toBottomOf="@+id/jina"
             app:layout_constraintStart_toEndOf="@+id/picha"
             android:maxWidth="230dp"
             android:textSize="13sp"
             android:textColor="#111"
             android:maxLines="1"
             android:padding="8dp"
             android:maxHeight="800dp"
             android:gravity="start|center"
             android:layout_margin="10dp"
             android:hint="message" />


         <TextView
             android:id="@+id/mesooCount"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:gravity="center"
             android:hint="200"
             android:drawableRight="@drawable/ic_email_black_24dp"
             android:textColor="#111"
             android:textSize="12sp"
             android:textColorHint="#000"
             android:maxHeight="60dp"
             android:padding="4dp"
             android:maxLength="70"
             android:maxLines="1"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintRight_toRightOf="@+id/mesoo"
             app:layout_constraintTop_toBottomOf="@+id/date" />


     </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>